@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Index</title>

	<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.4.3/jquery.min.js"></script>
</head>
<body>
@if (ViewBag.notinstalled != null && (bool)ViewBag.notinstalled == false)
{
    <div style="border: 1px solid red;padding: 15px;font-size: 16px;color: Red;">
        The database is not installed.<br /><br />
        Please @Html.ActionLink("click here to start the installation", "Index", "Install")
    </div>
}
    <div>
        <h1>Demo page for chat button & Invitation line</h1>

		<a href="/livechat/session" target="_blank">
			<img id="lcsk_chatbutton" src="" alt="Chat button" />
		</a>
		<script type="text/javascript">
			document.getElementById('lcsk_chatbutton').src = '/livechat/chatimage?r=' + document.referrer;
		</script>
    </div>

	<h4><a href="/Home/TestingReferrer">Testing Referrer</a></h4>

	<div id="lcsk_invitation" style="display: none;">
	  <div style="position: absolute; width: 100%; height: 100%; z-index: 10002; background-color: black;
		filter: alpha(opacity=70); opacity: 0.7;top: 0px;left: 0px">
		&nbsp;
	  </div>
	  <table style="position: absolute; width: 100%; height: 100%; z-index: 10003;top: 0px;left: 0px;">
		<tr>
		  <td align="center" valign="middle">
			<div style="color: Black; font-weight: bolder; background-color: White; padding: 15px;
			  width: 300px;">
				<a href="/livechat/session/accept" class="lcsk_inviteActions" target="_blank">
					<img src="/content/lcsk/invitation.jpg" alt="An operator invited you to chat" />
				</a><br /><br />
				<a href="/livechat/session/accept" class="lcsk_inviteActions" target="_blank">Start the chat session</a> | 
				<a href="/livechat/session/reject" class="lcsk_inviteActions" target="_blank">No thank you!</a>
			</div>
		  </td>
		</tr>
	  </table>
	</div>
	<script src="/livechat/checkinviration" type="text/javascript"></script>

</body>
</html>
